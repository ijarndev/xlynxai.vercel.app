---
import Anchor from "./ui/Anchor.astro"
import lynxText from '../assets/img/v_lynx.png'
import lynx from '@/assets/img/lynx-text.webp'
import Bars3 from 'astro-heroicons/outline/Bars3.astro'
import Button from "./ui/Button.astro"
import CalWrapper from "./CalWrapper.astro"
---

<div class="fixed top-6 left-0 px-8 pd:px-14 flex justify-center lg:px-40 xl:px-50 w-full z-2">
  <header class="rounded-full flex-1 bg-zinc-100/5 backdrop-blur-sm shadow-md justify-between px-4 flex items-center py-2 z-2">
    <a href="/" class="text-primary w-1/4 font-semibold text-4xl" aria-label="XLynx AI Home">
      <img src={lynx.src} alt="XLynx AI Logo" class="w-28 sm:w-32">
    </a>

    <nav class="2xl:flex items-center hidden mx-auto" aria-label="Main navigation">
      <ul class="*:text-nowrap text-secondary *:flex *:items-center flex gap-x-8 *:hover:text-zinc-100 z-1 relative" role="menubar">
        <li><Anchor href="/">Home</Anchor></li>
        <li><Anchor href="/services/web-development">Web Development</Anchor></li>
        <li><Anchor href="/services/ai-integration">AI Integration</Anchor></li>
        <li><Anchor href="/about">About us</Anchor></li>
        <li><Anchor href="/blog">Blog</Anchor></li>
        <li><Anchor href="/contact">Contact</Anchor></li>
      </ul> 
    </nav>

    <div class="*:text-nowrap justify-end w-1/4 *:w-full sm:*:w-auto relative mb-8 sm:mb-0 hidden 2xl:flex">
      <CalWrapper>
        <a
          href="javascript:void(0)"
        >
          <Button>SCHEDULE A MEETING</Button>
        </a>
      </CalWrapper>
    </div>

    <button 
      aria-label="Open menu" 
      aria-expanded="false"
      class="cursor-pointer 2xl:hidden menu-show-btn focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-zinc-900"
      id="menu-toggle"
    >
      <Bars3 width={32} color='#fff' aria-hidden="true" />
    </button>
  </header> 
</div>