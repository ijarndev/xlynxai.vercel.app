---
import quotationIcon from '../../assets/svg/quotation.svg'

interface Props {
  message: string
  author: string
  authorPosition: string
  authorCompany: string
}

const { message, author, authorPosition, authorCompany }: Props = Astro.props
---

<article class="!flex flex-col sm:flex-row gap-x-10 swiper-slide">
  <div class="">
    <img class="w-18 sm:w-28" src={quotationIcon.src} alt="quotation_icon">
  </div>

  <div
    class="py-4 flex-1"
  >
    <p class="text-xl italic">"{message}"</p>
    <p class="mt-6 font-bold">{author}</p>
    <p class="text-sm text-secondary">{authorPosition} at {authorCompany}</p>
  </div>
</article>