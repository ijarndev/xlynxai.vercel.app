---
import { Image } from 'astro:assets';
import webdev from '../../assets/img/webdev.png'
import ArrowRight from 'astro-heroicons/solid/ArrowRight.astro';

interface Props {
  name: string;
  description: string;
  icon?: any;
  index?: number;
  isPopular?: boolean | null;
  isLink?: boolean
  image?: string
}

const { image, name, description, icon: Icon, index, isPopular, isLink }: Props = Astro.props;
---

<article
  class="border-2 border-zinc-100/20 overflow-hidden group rounded-xl hover:border-[#00B4FB] min-h-40 group-hover:opacity-20 hover:opacity-100 transition-all"
>
  <div
    class="grid rounded-tl-xl rounded-tr-xl place-content-center overflow-hidden h-[300px]"
  >
    <img src={image} alt="">
  </div>

  <div class="px-10 py-4">
    <h3 class="text-xl text-zinc-100 font-bold">{name}</h3>
    <p class="mt-2 text-secondary">{description}</p>
  </div>

  <div class="flex justify-end">
    {
      isLink && (
        <div class="group-hover:border-[#00B4FB] group-hover:bg-zinc-700 border-zinc-100/20 border-l-2 border-t-2 transition size-12 rounded-tl-xl grid place-content-center">
          <ArrowRight width={22} class="text-zinc-100 -rotate-z-45" />
        </div>
      )
    }
  </div>
</article>
