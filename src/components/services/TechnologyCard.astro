---
interface Props {
  icon: any
  name: string
  description: string
}

const { icon, name, description } = Astro.props
---

<article class="flex flex-col gap-y-4 items-center py-2 px-2">
  <div>
    <img class="size-16 object-contain h-fit aspect-square" src={icon} alt="">
  </div>
  
  <div class="flex flex-col items-center">
    <h4 class="text-xl text-zinc-100 font-medium">{name}</h4>
    <p class="mt-2 text-sm text-zinc-300">{description}</p>
  </div>
</article>