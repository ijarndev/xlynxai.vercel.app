---
import Footer from '../components/Footer.astro'
import Navbar from '../components/Navbar.astro'
import Anchor from '../components/ui/Anchor.astro'
import Button from '../components/ui/Button.astro'
import '../styles/global.css'
import XMark from 'astro-heroicons/outline/XMark.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>XLynX AI | Web Development & Ai Integration for Bussinesses </title>

		<meta name="description" content="Professional web development and AI integration services for businesses. Transform your digital presence with custom solutions." />
		<meta name="keywords" content="web development, AI integration, business solutions, digital transformation" />
		<meta property="og:title" content="XLynX AI | Web Development & AI Integration for Businesses" />
		<meta property="og:description" content="Professional web development and AI integration services for businesses. Transform your digital presence with custom solutions." />
		<meta property="og:type" content="website" />
		<meta name="robots" content="index, follow" />
		<meta name="author" content="XLynX AI" />
		<link rel="canonical" href={Astro.url} />

		<script is:inline src="/script/particles.min.js"></script>
		<script is:inline>
			const base = location.origin
			const PARTICLES_CONFIG_URL = `${base}/script/particlesjs-config.json`
		</script>
	</head>
	<body
		class="background-default font-regular"
	>
		<aside class="bg-zinc-800/90 p-8 flex flex-col backdrop-blur-sm fixed h-[100dvh] w-4/5 z-4 -right-full transition-all side-menu">
			<div class="flex justify-end">
				<button class="text-theme menu-hide-btn"><XMark width={28} stroke-width={3} /></button>
			</div>

			<ul class="flex-1 text-lg font-medium space-y-3 *:*:!text-zinc-100 pt-2">
				<li><Anchor href="/">Home</Anchor></li>
				<li><Anchor href="/about">About Us</Anchor></li>
				<li><Anchor href="/services/web-development">Web Development</Anchor></li>
				<li><Anchor href="/services/ai-integration">AI Integration</Anchor></li>
				<li><Anchor href="/contact">Contact</Anchor></li>
			</ul>

			<div class="*:w-full">
				<Button>GET A QUOTE</Button>
			</div>
		</aside>

		<Navbar />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
	}
</style>

<script>
	const $menu = document.querySelector('.side-menu')
	const $menuHideBtn = document.querySelector('.menu-hide-btn')
	const $menuShowBtn = document.querySelector('.menu-show-btn')

	$menuHideBtn?.addEventListener('click', () => $menu?.classList.replace('right-0', '-right-full'))
	$menuShowBtn?.addEventListener('click', () => $menu?.classList.replace('-right-full', 'right-0'))
</script>