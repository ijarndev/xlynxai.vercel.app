---
import Anchor from "./ui/Anchor.astro"
import lynx from '../assets/img/lynx.png'
import Bars3 from 'astro-heroicons/outline/Bars3.astro'
import Button from "./ui/Button.astro"
--- 

<style>
  .navbar-bg-scroll {
    animation-name: navbarBg;
    animation-duration: 1s;
    animation-timeline: scroll(100, 100);
  }
  @keyframes navbarBg {
    from {
      background: transparent;
    }
    to {
      background: white;
    }
  }
</style>
<header class="fixed w-full top-0 background-default px-8 md:px-14 lg:px-40 xl:px-50 flex justify-between items-center py-2 z-2">
  <a href="/" class="text-primary font-semibold text-4xl">
    <img src={lynx.src} alt="lynx_logo" class="size-12 sm:size-18">
  </a>

  <nav class="xl:flex items-center hidden">
    <ul class="text-secondary *:flex *:items-center flex gap-x-8 *:hover:text-zinc-100 z-1 relative">
      <li><Anchor href="/">Home</Anchor></li>
      <li><Anchor href="/services/web-development">Web Development</Anchor></li>
      <li><Anchor href="/services/ai-automation">AI Integration</Anchor></li>
      <li><Anchor href="/about">About us</Anchor></li>

      <div class="*:text-nowrap *:w-full sm:*:w-auto relative mb-8 sm:mb-0">
        <a
          href="javascript:void(0)"
					data-cal-link="luis-roberto-leyva-galban-kze0qq/30min"
					data-cal-namespace="30min"
					data-cal-config='{"layout":"month_view"}'
        >
          <Button>SCHEDULE A MEETING</Button>
        </a>
    </ul>
  </nav>

  <button class="cursor-pointer xl:hidden menu-show-btn">
    <Bars3 width={32} color='#fff' />
  </button>
</header>