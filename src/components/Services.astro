---
import ServiceCard from "./ui/ServiceCard.astro"
import RocketLaunch from 'astro-heroicons/outline/RocketLaunch.astro'

import { services } from '../data/services.ts'
---

<section class="rounded-tr-[200px] px-8 md:px-14 lg:px-40 xl:px-50 pb-20 pt-10 z-1 relative border-b-2 border-dashed border-gray-400/10"> 
  <h2 class="text-3xl sm:text-7xl text-primary mb-2">Our Services</h2>
  <p class="text-secondary text-sm sm:max-w-3/4 mb-12">Lorem ipsum dolor sit amet consectetur adipisicing elit. Eaque temporibus perspiciatis animi a? Nulla quisquam voluptatum doloribus provident eius dignissimos!</p>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
    {
      services.map((service, index) => (
        <a href={service.homeHref}>
          <ServiceCard
            name={service.name.toUpperCase()}
            description={service.description}
            icon={service.icon}
            index={index+1}
            isPopular={ service.isPopular || null }
          />
        </a>
      ))
    }

  <a
    href="javascript:void(0)"
    data-cal-link="luis-roberto-leyva-galban-kze0qq/30min"
    data-cal-namespace="30min"
    data-cal-config='{"layout":"month_view"}'
    class="rounded-lg grid place-content-center text-center text-theme hover:!text-zinc-800 hover:scale-105 border-2 cursor-pointer border-[#00B4FB] border-dashed min-h-40 p-4 group-hover:opacity-20 hover:opacity-100 transition-all hover:!bg-[#00B4FB]"
  >
    <div class="flex flex-col gap-y-4 items-center">
      <RocketLaunch width={32} class="margin-auto" />
      <p>START A PROJECT</p>
    </div>
  </a>
  </div>
</section>