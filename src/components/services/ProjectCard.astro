---
import type { Project } from '../../types'

const { name, description, type, featuredImageUrl, href } = Astro.props as Project
---

<a href={href} target="_blank">
  <article class="bg-zinc-800 rounded-2xl overflow-hidden transition hover:-translate-y-1">
    <img 
      src={featuredImageUrl} 
      alt={name} 
      class="w-full h-48 object-cover"
      loading="lazy"
    />
  
    <div class="p-4 flex flex-col gap-2">
      <h3 class="text-lg font-semibold text-white">{name}</h3>
      <p class="text-sm text-neutral-300 line-clamp-3">{description}</p>
    </div>
  </article>
</a>