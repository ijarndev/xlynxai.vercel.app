---
import '@/styles/global.css'
import Layout from "@/layouts/Layout.astro"

import Phone from 'astro-heroicons/outline/Phone.astro'
import Envelope from 'astro-heroicons/outline/Envelope.astro'
import MapPin from 'astro-heroicons/outline/MapPin.astro'

const contactInfo = [
  {
    icon: Phone,
    title: "Phone",
    details: ["+1 (702) 582-1515"],
    description: "Mon-Fri 9AM-6PM",
  },
  {
    icon: Envelope,
    title: "Email",
    details: ["contact@xlynxai.com"],
    description: "We'll respond within 24 hours",
  },
  {
    icon: MapPin,
    title: "Location",
    details: ["Las Vegas, Nevada"],
    mapHtml: `<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d206253.23587250273!2d-115.17499999999998!3d36.125!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80beb782a4f57dd1%3A0x3accd5e6d5b379a3!2sLas%20Vegas%2C%20Nevada!5e0!3m2!1ses-419!2sus!4v1758822736956!5m2!1ses-419!2sus" width="100%" height="300" style="border:0; border-radius: 12px" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>`
  }
]
---

<Layout
  title="Contact Us | XLynX AI"
  description="Get in touch with XLynX AI for inquiries, support, or to discuss your AI project needs. We're here to help!"
>
<section class="pt-40 px-4" aria-labelledby="contact-main-heading">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 id="contact-main-heading" class="text-4xl md:text-5xl font-bold text-zinc-100 mb-4">Get in Touch</h2>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto text-pretty">
        Ready to start your next project? We'd love to hear from you. Reach out through any of the channels below.
      </p>
    </div>

    <!-- Contact Cards Grid -->
    <address class="grid grid-cols-1 md:grid-cols-2 gap-8 not-italic" aria-label="Contact information">
      {contactInfo.map((item) => (
        <div class="p-8 bg-zinc-100 border-border rounded-xl hover:border-primary/50 transition-colors duration-300">
          <div class="flex items-start gap-4">
            <!-- Icon -->
            <div class="flex-shrink-0 p-3 background-theme rounded-lg text-primary">
              <item.icon class="w-6 h-6" aria-hidden="true" />
            </div>

            <!-- Content -->
            <div class="flex-1">
              <h3 class="text-xl font-semibold text-card-foreground mb-3">{item.title}</h3>

              <!-- Details -->
              <div class="space-y-1 mb-3">
                {item.details.map((detail) => (
                  <p class="text-card-foreground font-medium">
                    {detail}
                  </p>
                ))}
              </div>

              <!-- Description -->
              <p class="text-muted-foreground text-sm">{item.description}</p>

              { item.mapHtml && (
                <div set:html={item.mapHtml} class="mt-4" title="Las Vegas, Nevada location"></div>
              ) }
            </div>
          </div>
        </div>
      ))}
    </address>

  </div>
</section>

</Layout>